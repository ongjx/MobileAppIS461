<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".receipts_summary">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10sp"
        android:text="My Receipts"
        android:id="@+id/receipt_header"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/see_all_receipts_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/spent_header"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20sp"
        android:autoLink="all"
        android:text="See All"
        android:textAlignment="textEnd"
        android:textColor="#0B55EA"
        android:textSize="14sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:text="Receipt Name"
        android:layout_below="@+id/receipt_header"
        android:id="@+id/name_heading"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Amount Spent"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_below="@+id/receipt_header"
        android:id="@+id/spent_header"
        android:textSize="16sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp" />

    <ListView
        android:id="@+id/receipt_summary_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/name_heading"
        android:layout_marginLeft="0sp"

        />

</RelativeLayout>